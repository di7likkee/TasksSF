<apex:page controller="testcontroller" showHeader="false" sidebar="false" lightningStylesheets="true" docType="html-5.0">
    <apex:form >
        <apex:pageBlock title="Time Zone">
            <apex:pageBlockSection columns="1">
                <apex:outputText value="{0,date, HH:mm:ss z}">
                    <apex:param value="{!NOW()}" />
                </apex:outputText>
                
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Time Zone:" for="time_zone"/>
                    <apex:input type="number" html-step="1" value="{!numberZone}" id="time_zone"/>
                </apex:pageBlockSectionItem>
            </apex:pageBlockSection>
            <apex:pageBlockButtons location="bottom">
                <apex:commandButton action="{!clickButton}" value="Get time" id="theButton"/>
            </apex:pageBlockButtons>          
        </apex:pageBlock>
    </apex:form>
    
    <c:TimeZone timeZoneNumber="{!numberZone}"/>
    
</apex:page>